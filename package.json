{
  "name": "storefront_backend",
  "version": "0.1.0",
  "description": "",
  "main": "server.ts",
  "scripts": {
    "docker-dev:start": "docker compose --env-file .env up db_dev -d",
    "docker-test:start": "docker compose --env-file .env.test up db_test -d",
    "start": "NODE_ENV=dev npm run docker-dev:start && ts-node src/server.ts",
    "watch": "tsc-watch --esModuleInterop src/server.ts --outDir ./dist --onSuccess \"node ./dist/server.js\"",
    "test": "NODE_ENV=test npm run docker-test:start && jasmine-ts",
    "tsc": "tsc",
    "build": "tsc && cp database.js dist/",
    "prod": "npm run build && node dist/server.js",
    "migrate-dev:up": "db-migrate up --config ./database.js",
    "migrate-dev:down": "db-migrate down --config ./database.js",
    "migrate-test:up": "db-migrate up --config ./database.js --env test",
    "migrate-test:down": "db-migrate down --config ./database.js --env test",
    "lint": "eslint './**/*.ts'",
    "lint:fix": "eslint './**/*.ts' --fix",
    "format": "prettier --write './**/*.ts'",
    "prepare": "husky install"
  },
  "author": "Udacity",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.19.0",
    "db-migrate": "^0.11.14",
    "db-migrate-pg": "^1.5.2",
    "dotenv": "^16.3.1",
    "express": "^4.17.1",
    "pg": "^8.5.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.9",
    "@types/jasmine": "^3.6.3",
    "@types/node": "^20.6.3",
    "@types/pg": "^7.14.7",
    "@typescript-eslint/eslint-plugin": "^6.7.2",
    "@typescript-eslint/parser": "^6.7.2",
    "eslint": "^8.49.0",
    "eslint-config-airbnb-typescript": "^17.1.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-prettier": "^5.0.0",
    "git-commit-msg-linter": "^5.0.4",
    "husky": "^8.0.3",
    "jasmine": "^3.6.4",
    "jasmine-spec-reporter": "^6.0.0",
    "jasmine-ts": "^0.3.0",
    "lint-staged": "^14.0.1",
    "prettier": "^3.0.3",
    "ts-node": "^9.1.1",
    "tsc-watch": "^4.2.9",
    "typescript": "^5.2.2"
  }
}
